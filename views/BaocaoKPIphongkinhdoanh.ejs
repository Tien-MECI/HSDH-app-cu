    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script>
        // Khởi tạo DataTable
        $(document).ready(function() {
            $('table').DataTable({
                pageLength: 10,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.11.5/i18n/vi.json'
                },
                dom: '<"row"<"col-md-6"l><"col-md-6"f>>rt<"row"<"col-md-6"i><"col-md-6"p>>'
            });
            
            // Khởi tạo date inputs
            updateDateInputs();
        });
        
        // Cập nhật date inputs dựa trên filterType
        function updateDateInputs() {
            const filterType = document.getElementById('filterTypeSelect').value;
            
            // Ẩn tất cả các container trước
            document.getElementById('dateInput1Container').style.display = 'none';
            document.getElementById('dateInput2Container').style.display = 'none';
            document.getElementById('monthYearContainer').style.display = 'none';
            document.getElementById('quarterYearContainer').style.display = 'none';
            document.getElementById('yearOnlyContainer').style.display = 'none';
            
            switch(filterType) {
                case 'none':
                    // Không hiển thị gì cả
                    break;
                    
                case 'day':
                    document.getElementById('dateInput1Container').style.display = 'block';
                    document.getElementById('dateInput1Label').textContent = 'Ngày';
                    break;
                    
                case 'week':
                    document.getElementById('dateInput1Container').style.display = 'block';
                    document.getElementById('dateInput1Label').textContent = 'Tuần bắt đầu';
                    break;
                    
                case 'month':
                    document.getElementById('monthYearContainer').style.display = 'block';
                    break;
                    
                case 'quarter':
                    document.getElementById('quarterYearContainer').style.display = 'block';
                    break;
                    
                case 'year':
                    document.getElementById('yearOnlyContainer').style.display = 'block';
                    break;
                    
                case 'range':
                    document.getElementById('dateInput1Container').style.display = 'block';
                    document.getElementById('dateInput1Label').textContent = 'Từ ngày';
                    document.getElementById('dateInput2Container').style.display = 'block';
                    break;
            }
        }
        
        // Hiển thị modal chọn tháng/năm
        function showMonthYearModal() {
            // Set giá trị hiện tại nếu có - lấy từ hidden input (client-side)
            const monthYearVal = document.getElementById('monthYearValue')?.value;
            if (monthYearVal) {
                const monthParts = monthYearVal.split('-');
                if (monthParts.length === 2) {
                    $('#monthSelect').val(monthParts[1]);
                    $('#yearSelect').val(monthParts[0]);
                }
            } else {
                // Set mặc định là tháng và năm hiện tại
                const now = new Date();
                $('#monthSelect').val(('0' + (now.getMonth() + 1)).slice(-2));
                $('#yearSelect').val(now.getFullYear());
            }
            // Đảm bảo filterType được cập nhật
            const filterSelect = document.getElementById('filterTypeSelect');
            if (filterSelect) {
                filterSelect.value = 'month';
                if (typeof updateDateInputs === 'function') updateDateInputs();
            }
            $('#monthYearModal').modal('show');
        }
        
        // Hiển thị modal chọn quý/năm
        function showQuarterYearModal() {
            // Lấy giá trị hiện tại từ hidden input (client-side)
            const quarterYearVal = document.getElementById('quarterYearValue')?.value;
            if (quarterYearVal) {
                const quarterParts = quarterYearVal.split('-');
                if (quarterParts.length === 2) {
                    $('#quarterSelect').val(quarterParts[0]);
                    $('#quarterYearSelect').val(quarterParts[1]);
                }
            } else {
                // Set mặc định là quý và năm hiện tại
                const now = new Date();
                const currentQuarter = Math.floor((now.getMonth() + 3) / 3);
                $('#quarterSelect').val(currentQuarter);
                $('#quarterYearSelect').val(now.getFullYear());
            }
            // Đảm bảo filterType được cập nhật
            const filterSelectQ = document.getElementById('filterTypeSelect');
            if (filterSelectQ) {
                filterSelectQ.value = 'quarter';
                if (typeof updateDateInputs === 'function') updateDateInputs();
            }
            $('#quarterYearModal').modal('show');
        }
        
        // Hiển thị modal chọn năm
        function showYearOnlyModal() {
            // Lấy giá trị hiện tại từ hidden input (client-side)
            const yearOnlyVal = document.getElementById('yearOnlyValue')?.value;
            if (yearOnlyVal) {
                $('#yearOnlySelect').val(yearOnlyVal);
            } else {
                // Set mặc định là năm hiện tại
                const now = new Date();
                $('#yearOnlySelect').val(now.getFullYear());
            }
            // Đảm bảo filterType được cập nhật
            const filterSelectY = document.getElementById('filterTypeSelect');
            if (filterSelectY) {
                filterSelectY.value = 'year';
                if (typeof updateDateInputs === 'function') updateDateInputs();
            }
            $('#yearOnlyModal').modal('show');
        }
        
        // Lưu tháng/năm
        function saveMonthYear() {
            const month = $('#monthSelect').val();
            const year = $('#yearSelect').val();
            
            // Format: YYYY-MM
            const monthYearValue = `${year}-${month}`;
            const displayValue = `Tháng ${month}/${year}`;
            
            document.getElementById('monthYearDisplay').value = displayValue;
            document.getElementById('monthYearValue').value = monthYearValue;
            
            $('#monthYearModal').modal('hide');
        }
        
        // Lưu quý/năm
        function saveQuarterYear() {
            const quarter = $('#quarterSelect').val();
            const year = $('#quarterYearSelect').val();
            
            // Format: Q-YYYY (ví dụ: 1-2024)
            const quarterYearValue = `${quarter}-${year}`;
            const displayValue = `Quý ${quarter}/${year}`;
            
            document.getElementById('quarterYearDisplay').value = displayValue;
            document.getElementById('quarterYearValue').value = quarterYearValue;
            
            $('#quarterYearModal').modal('hide');
        }
        
        // Lưu năm
        function saveYearOnly() {
            const year = $('#yearOnlySelect').val();
            
            document.getElementById('yearOnlyDisplay').value = `Năm ${year}`;
            document.getElementById('yearOnlyValue').value = year;
            
            $('#yearOnlyModal').modal('hide');
        }
        
        // Reset filters
        function resetFilters() {
            window.location.href = '/baocao-kpi-phong-kinh-doanh';
        }
        
        // Lưu tất cả ghi chú
        function saveAllNotes() {
            const noteTextareas = document.querySelectorAll('textarea[placeholder*="ghi chú"]');
            const notes = [];
            
            noteTextareas.forEach((textarea, index) => {
                if (textarea.value.trim()) {
                    notes.push({
                        index: index,
                        value: textarea.value.trim()
                    });
                }
            });
            
            if (notes.length > 0) {
                // Gửi API lưu ghi chú
                alert(`Đã lưu ${notes.length} ghi chú thành công!`);
                
                // Reset textareas
                noteTextareas.forEach(textarea => {
                    textarea.value = '';
                });
            } else {
                alert('Không có ghi chú nào để lưu!');
            }
        }

        // Khi thay đổi 'Loại báo cáo' -> reset các bộ lọc về mặc định và submit
        (function() {
            const loaiSelect = document.getElementById('loaiBaoCaoSelect');
            if (!loaiSelect) return;

            loaiSelect.addEventListener('change', function() {
                const form = document.getElementById('filterForm');
                if (!form) return;

                // Trước khi submit: chỉ giữ một input[name="startDate"] có giá trị (nếu có), xóa các input khác
                const startDateInputs = Array.from(form.querySelectorAll('input[name="startDate"]'));
                if (startDateInputs.length > 1) {
                    let keeper = startDateInputs.find(i => i.value && i.value.toString().trim() !== '');
                    if (!keeper) keeper = startDateInputs[0];
                    startDateInputs.forEach(i => { if (i !== keeper) i.remove(); });
                }

                // Đảm bảo các hidden inputs month/quarter/year phù hợp với filterType
                const filterSelect = document.getElementById('filterTypeSelect');
                if (filterSelect) {
                    // If user changed report type without changing filterType, keep it as is.
                    // But ensure hidden inputs reflect the current UI displays.
                    // If month display has value but monthYearValue missing, set it.
                    try {
                        const monthDisplay = document.getElementById('monthYearDisplay');
                        const monthHidden = document.getElementById('monthYearValue');
                        if (monthDisplay && monthDisplay.value && monthDisplay.value.toString().trim() !== '' && !monthHidden) {
                            const input = document.createElement('input');
                            input.type = 'hidden';
                            input.name = 'startDate';
                            input.id = 'monthYearValue';
                            // attempt to parse display like "Tháng 01/2026" -> "2026-01"
                            const m = monthDisplay.value.match(/(\d{2})\/(\d{4})$/);
                            if (m) input.value = `${m[2]}-${m[1]}`;
                            form.appendChild(input);
                        }
                    } catch (e) { /* ignore */ }
                }

                // Debug: optional console log
                // console.log('Submitting form, startDate values:', Array.from(form.querySelectorAll('input[name="startDate"]')).map(i=>i.value));

                form.submit();
            });
        })();
        
        // Xử lý form submission
        document.getElementById('filterForm').addEventListener('submit', function(e) {
            const filterType = document.getElementById('filterTypeSelect').value;
            
            // Xóa các input không cần thiết
            if (filterType !== 'month') {
                document.getElementById('monthYearValue').remove();
            }
            if (filterType !== 'quarter') {
                document.getElementById('quarterYearValue').remove();
            }
            if (filterType !== 'year') {
                document.getElementById('yearOnlyValue').remove();
            }
            if (filterType !== 'range') {
                const endDateInput = document.getElementById('dateInput2');
                if (endDateInput) endDateInput.remove();
            }
            
            // Đảm bảo chỉ có một input startDate - giữ lại input có giá trị nếu có
            const startDateInputs = Array.from(document.querySelectorAll('input[name="startDate"]'));
            if (startDateInputs.length > 1) {
                let keeper = startDateInputs.find(i => i.value && i.value.toString().trim() !== '');
                if (!keeper) keeper = startDateInputs[0];
                startDateInputs.forEach(i => {
                    if (i !== keeper) i.remove();
                });
            }
        });
    </script>
