                console.log(`D√≤ng ${idx + 1}:`, {
                    tongThanhTien: input.getAttribute('data-tongtien'),
                    tamUng: input.value,
                    tamUngParsed: parseNumber(input.value)
                });
            });
        };
    });
    
    // ==================== XU·∫§T EXCEL ====================
    
    // Xu·∫•t Excel v·ªõi d·ªØ li·ªáu ƒë√£ nh·∫≠p
    function exportExcelWithData() {
        // Thu th·∫≠p d·ªØ li·ªáu t·ª´ c√°c √¥ input c√≥ th·ªÉ ch·ªânh s·ª≠a
        const dataToExport = {
            table3Notes: [],
            table4Data: [],
            table5Data: []
