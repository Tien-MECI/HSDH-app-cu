    }
    
    // ==================== PH√ÇN TRANG ====================
    
    // H√†m chuy·ªÉn trang
    function goToPage(page) {
        const monthYear = '<%= monthYear || "" %>';
        if (monthYear) {
            window.location.href = `/baoluongkhoan?monthYear=${monthYear}&page=${page}`;
        }
    }
    
    // ==================== X·ª¨ L√ù S·ªê TI·ªÄN ====================
    
    // ƒê·ªãnh d·∫°ng s·ªë khi nh·∫≠p (x√≥a ƒë·ªãnh d·∫°ng)
    function formatNumberInput(input) {
        // L∆∞u v·ªã tr√≠ con tr·ªè
        const cursorPos = input.selectionStart;
        const value = input.value;
        
        // X√≥a t·∫•t c·∫£ d·∫•u ch·∫•m, gi·ªØ l·∫°i d·∫•u ph·∫©y n·∫øu c√≥
        let newValue = value.replace(/\./g, '');
        
        // N·∫øu c√≥ d·∫•u ph·∫©y, thay th·∫ø b·∫±ng d·∫•u ch·∫•m t·∫°m th·ªùi
        newValue = newValue.replace(/,/g, '.');
        
        input.value = newValue;
        
        // Kh√¥i ph·ª•c v·ªã tr√≠ con tr·ªè
        const newCursorPos = cursorPos - (value.length - newValue.length);
        input.setSelectionRange(newCursorPos, newCursorPos);
    }
    
    // ƒê·ªãnh d·∫°ng s·ªë khi hi·ªÉn th·ªã (th√™m ƒë·ªãnh d·∫°ng VN)
    function formatNumberDisplay(input) {
        const value = input.value;
        const num = parseNumber(value);
        
        if (!isNaN(num)) {
            // L∆∞u v·ªã tr√≠ con tr·ªè
            const cursorPos = input.selectionStart;
            const originalValue = input.value;
            
            // Format s·ªë
            input.value = formatNumberJS(num);
            
            // T√≠nh to√°n v·ªã tr√≠ con tr·ªè m·ªõi
            const formattedValue = input.value;
            let newCursorPos = cursorPos;
            
            // ƒêi·ªÅu ch·ªânh con tr·ªè d·ª±a tr√™n s·ªë k√Ω t·ª± ƒë∆∞·ª£c th√™m/b·ªõt
            const diff = formattedValue.length - originalValue.length;
            if (diff !== 0) {
                // ƒê∆°n gi·∫£n: ƒë·∫∑t con tr·ªè ·ªü cu·ªëi
                newCursorPos = formattedValue.length;
            }
            
            input.setSelectionRange(newCursorPos, newCursorPos);
            
            // K√≠ch ho·∫°t t√≠nh to√°n l·∫°i n·∫øu c√≥ data-index
            const index = input.getAttribute('data-index');
            if (index) {
                setTimeout(() => calculateThucLinh(input, index), 10);
            }
        } else {
            input.value = '0';
        }
    }
    
    // ==================== B·∫¢NG 3: GHI CH√ö ====================
    
    // C·∫≠p nh·∫≠t ghi ch√∫ cho b·∫£ng 3
    function updateNote(index, value) {
        console.log('C·∫≠p nh·∫≠t ghi ch√∫ cho nh√¢n s·ª±', index, ':', value);
        // C√≥ th·ªÉ th√™m AJAX ƒë·ªÉ l∆∞u v√†o database
    }
    
    // ==================== B·∫¢NG 4: ƒê∆†N L·∫ÆP ƒê·∫∂T ====================
    
    // C·∫≠p nh·∫≠t ghi ch√∫ cho b·∫£ng 4
    function updateInstallationNote(index, value) {
        console.log('C·∫≠p nh·∫≠t ghi ch√∫ ƒë∆°n l·∫Øp ƒë·∫∑t', index, ':', value);
    }
    
    // C·∫≠p nh·∫≠t th·ª±c chi cho b·∫£ng 4
    function updateActualAmount(index, value) {
        console.log('C·∫≠p nh·∫≠t th·ª±c chi ƒë∆°n', index, ':', value);
        // Format l·∫°i gi√° tr·ªã
        const num = parseNumber(value);
        if (!isNaN(num)) {
            const input = event.target;
            input.value = formatNumberJS(num);
