    // ==================== B·∫¢NG 5: L∆Ø∆†NG KHO√ÅN ====================
    
    // T√≠nh th·ª±c lƒ©nh khi thay ƒë·ªïi t·∫°m ·ª©ng
    function calculateThucLinh(input, index) {
        // L·∫•y gi√° tr·ªã t·∫°m ·ª©ng
        const tamUng = parseNumber(input.value);
        
        // L·∫•y t·ªïng th√†nh ti·ªÅn t·ª´ data attribute
        const tongThanhTien = parseFloat(input.getAttribute('data-tongtien') || 0);
        
        // T√≠nh th·ª±c lƒ©nh
        const thucLinh = tongThanhTien - tamUng;
        
        // C·∫≠p nh·∫≠t √¥ th·ª±c lƒ©nh
        const thucLinhInput = document.getElementById(`thucLinh_${index}`);
        if (thucLinhInput) {
            thucLinhInput.value = formatNumberJS(thucLinh);
        }
        
        // C·∫≠p nh·∫≠t t·ªïng
        updateTotals();
    }
    
    // C·∫≠p nh·∫≠t t·ªïng t·∫°m ·ª©ng v√† th·ª±c lƒ©nh
    function updateTotals() {
        let totalTamUng = 0;
        let totalThucLinh = 0;
        
        // T√≠nh t·ªïng t·∫°m ·ª©ng
        document.querySelectorAll('.calculation-input[data-tongtien]').forEach(input => {
