    <script>
    // ==================== KH·ªûI T·∫†O & TI·ªÜN √çCH ====================
    
    // H√†m format s·ªë trong JavaScript (VN format)
    function formatNumberJS(num) {
        if (num === null || num === undefined || isNaN(num)) return '0';
        return new Intl.NumberFormat('vi-VN').format(num);
    }
    
    // Parse s·ªë t·ª´ chu·ªói (h·ªó tr·ª£ c·∫£ VN v√† EN format)
    function parseNumber(str) {
        if (!str) return 0;
        // Thay th·∫ø t·∫•t c·∫£ d·∫•u ch·∫•m ph√¢n c√°ch ngh√¨n
        let cleaned = str.toString().replace(/\./g, '');
        // Thay d·∫•u ph·∫©y th·∫≠p ph√¢n th√†nh d·∫•u ch·∫•m
        cleaned = cleaned.replace(/,/g, '.');
        // Lo·∫°i b·ªè kho·∫£ng tr·∫Øng v√† k√Ω t·ª± kh√¥ng ph·∫£i s·ªë
        cleaned = cleaned.replace(/[^\d.-]/g, '');
        
        const num = parseFloat(cleaned);
        return isNaN(num) ? 0 : num;
    }
    
    // ==================== FORM X·ª¨ L√ù ====================
    
    // C·∫≠p nh·∫≠t gi√° tr·ªã th√°ng/nƒÉm t·ª´ input type="month" sang ƒë·ªãnh d·∫°ng MM/YYYY
    function updateMonthYear(input) {
