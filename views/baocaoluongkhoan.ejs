        console.log('D·ªØ li·ªáu xu·∫•t Excel:', dataToExport);
        
        // Chuy·ªÉn h∆∞·ªõng ƒë·∫øn URL xu·∫•t Excel
        const monthYear = '<%= monthYear || "" %>';
