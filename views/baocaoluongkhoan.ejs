        });
        
        // T√≠nh t·ªïng th·ª±c lƒ©nh
        document.querySelectorAll('.calculation-input[id^="thucLinh_"]').forEach(input => {
            totalThucLinh += parseNumber(input.value);
        });
        
        // C·∫≠p nh·∫≠t DOM
        const totalTamUngInput = document.getElementById('totalTamUng');
        const totalThucLinhInput = document.getElementById('totalThucLinh');
        
        if (totalTamUngInput) {
            totalTamUngInput.value = formatNumberJS(totalTamUng);
        }
        
        if (totalThucLinhInput) {
            totalThucLinhInput.value = formatNumberJS(totalThucLinh);
        }
    }
    
    // X·ª≠ l√Ω ph√≠m t·∫Øt trong √¥ nh·∫≠p s·ªë
    function handleNumberKeydown(event, input) {
        // Cho ph√©p: s·ªë, backspace, delete, tab, arrow keys, Enter, .
        const allowedKeys = [
            'Backspace', 'Delete', 'Tab', 'ArrowLeft', 'ArrowRight', 
            'ArrowUp', 'ArrowDown', 'Enter', '.', ','
        ];
        
        if (allowedKeys.includes(event.key)) return true;
        if (/^\d$/.test(event.key)) return true;
        
        event.preventDefault();
        return false;
    }
    
    // ==================== KH·ªûI T·∫†O TRANG ====================
    
    document.addEventListener('DOMContentLoaded', function() {
        // 1. X·ª≠ l√Ω input th√°ng/nƒÉm
        const monthYear = '<%= monthYear || "" %>';
        const monthYearInput = document.getElementById('monthYearInput');
        
        if (monthYear && monthYearInput) {
            const [month, year] = monthYear.split('/');
            monthYearInput.value = `${year}-${month.padStart(2, '0')}`;
        } else {
            const now = new Date();
            const currentMonth = (now.getMonth() + 1).toString().padStart(2, '0');
            const currentYear = now.getFullYear();
            monthYearInput.value = `${currentYear}-${currentMonth}`;
        }
        
        // 2. ƒê·ªãnh d·∫°ng c√°c √¥ s·ªë ƒë·ªçc-only
        document.querySelectorAll('.amount input[type="text"][readonly]').forEach(input => {
            if (input.value) {
                const num = parseNumber(input.value);
                if (!isNaN(num)) {
                    input.value = formatNumberJS(num);
                }
            }
        });
        
        // 3. ƒê·ªãnh d·∫°ng c√°c √¥ s·ªë trong b·∫£ng 5
        document.querySelectorAll('.calculation-input').forEach(input => {
            if (input.value) {
                const num = parseNumber(input.value);
                if (!isNaN(num)) {
                    input.value = formatNumberJS(num);
                }
            }
            
            // Th√™m x·ª≠ l√Ω ph√≠m
            input.addEventListener('keydown', (e) => handleNumberKeydown(e, input));
            
            // Auto-calc khi r·ªùi kh·ªèi √¥
            input.addEventListener('blur', function() {
                formatNumberDisplay(this);
            });
            
            // Auto-calc khi nh·∫•n Enter
            input.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    formatNumberDisplay(this);
                    this.blur();
                }
            });
        });
        
        // 4. T√≠nh to√°n t·ªïng ban ƒë·∫ßu cho b·∫£ng 5
        setTimeout(() => updateTotals(), 100);
        
        // 5. Debug helper (t√πy ch·ªçn)
        window.debugData = function() {
