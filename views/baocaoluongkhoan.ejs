        document.querySelectorAll('input[onchange*="updateActualAmount"], input[onchange*="updateInstallationNote"]').forEach(input => {
            const onchange = input.getAttribute('onchange');
            const match = onchange.match(/update(?:ActualAmount|InstallationNote)\((\d+),/);
